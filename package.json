{
  "name": "koibanx-backend-challenge",
  "version": "1.0.0",
  "description": "Koibanx Backend Challenge",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.18.0"
  },
  "main": "src/server.js",
  "scripts": {
    "prepare": "husky install",
    "prestart": "npm install",
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "start:test": "concurrently \"npm test \" \"nodemon src/server.js\"",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --detectOpenHandles",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:ci": "npm test -- --coverage",
    "eslint": "eslint './src/**' --fix",
    "run": "node $NODE_DEBUG_OPTION src/server.js",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.html",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeimbeekor/koibanx-backend-challenge.git"
  },
  "keywords": [],
  "author": "Alvaro Vega Plata (zeimbeekor)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeimbeekor/koibanx-backend-challenge/issues"
  },
  "homepage": "https://github.com/zeimbeekor/koibanx-backend-challenge#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "basic-auth": "^2.0.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "errorhandler": "^1.5.1",
    "express": "~4.17.1",
    "express-validator": "^6.12.0",
    "helmet": "^5.1.1",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "logger": "0.0.1",
    "moment": "^2.29.4",
    "mongoose": "^6.5.2",
    "mongoose-paginate-v2": "^1.7.0",
    "tsscmp": "^1.0.6",
    "winston": "~2.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.7.8",
    "@types/supertest": "^2.0.12",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "npm": "^8.18.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "{src}/**/*.js": [
      "eslint 'src/**' --fix",
      "git add"
    ]
  }
}
